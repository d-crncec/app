<?php

//$a = 10;
//$b = 5;

//funkcije
function printSum (int $sum)
{
    echo $sum . PHP_EOL;
}

function getSum(int $a, int $b)
{
    return $a + $b;
}

// kraj funkcija

printSum(getSum(211, 2020) . PHP_EOL);

?>

<?php
//deklaracija funkcija
function ispisTeksta ($tekst) {
    echo ($tekst);
}

$tekst = "joina";
var_dump ($tekst) . PHP_EOL;
echo ($tekst) . PHP_EOL;
?>

<?php

function getSum(&$sum,...$numbers)
{
    $sum = 0;
    foreach ($numbers as $number) {
        $sum += $number;
    }
}

function printSum(int $sum)
{
    echo $sum . PHP_EOL;
}

//$sum = 0;
getSum($sum, 100,200,300,400,500);
getSum($sum, 1);
printSum($sum);


<?php

function makecoffee($type = "cappuccino")
{
    return "Making a cup of $type.\n";
}

echo makecoffee();
echo makecoffee(null);
echo makecoffee("espresso");